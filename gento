depend() {
        after net
}

start() {
        ebegin "Starting ${RC_SVCNAME}"
                start-stop-daemon -S -m --pidfile ${APPPID} -x ${APPBIN} -u ${USER} -d "${LOGFILE}" -b -- ${APPARGS}
        eend $?
}

stop() {
        ebegin "Stopping ${RC_SVCNAME}"
                start-stop-daemon -K -x ${APPBIN} -u ${USER} -d "${LOGFILE}" 
        eend $?
}
